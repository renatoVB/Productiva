 <div class="auth-form-header">
  <%= image_tag("Captura.png", class: "octicon", height: "68") %>
  <h2>Sign up</h2>
</div>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
<div class="micontainer">
   <div class="well well-sm">
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname, autofocus: true, placeholder: "lastname", class: "form-control" %>
  </div>

   <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
  </div>

  <div class="well well-sm">
  <div class="field">
    
    <%= f.association :company,  placeholder: "company", class: "form-control" %>
  </div>
 </div>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirmation password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>

  </div>
 </div> 
<% end %>

<%= render "devise/shared/links" %>
